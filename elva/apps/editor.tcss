#editor {
  border: none;
  padding: 0;
}

#credentialscreen {
  align: center middle;
}

#credentialscreen #body {
  column-span: 2;
}

#credentialscreen #form {
  grid-size: 2 3;
  grid-gutter: 1 2;
  grid-rows: 5;
  border: thick $background 80%;
  height: auto;
  width: 80;
  padding: 2;
  background: $surface;
}

#credentialscreen #confirm {
  background: green;
  column-span: 2;
  width: 100%;
  height: 3;
  margin: 1;
}
